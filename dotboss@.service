[Unit]
Descripiton=Watch dotfiles repository and git commit all changes using gitwatch. run with: systemctl --user --now enable dotboss@$(systemd-escape "'-r url/to/repository' -r git-branch /path/to/folder").service

[Service]
Environment="SCRIPT_ARGS=%I"
ExecStart=/usr/local/bin/gitwatch $SCRIPT_ARGS
ExecStop=/bin/true

[Install]
WantedBy=default.target
